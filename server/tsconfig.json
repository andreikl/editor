{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "module": "commonjs",
        "typeRoots": [
            "node_modules/@types"
        ],
        //"lib": [
        //    "es2017",
        //    "dom"
        //],
        "strictNullChecks": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
